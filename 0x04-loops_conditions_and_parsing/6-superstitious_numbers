#!/usr/bin/env bash
# This script displays numbers from 1 to 20 and shows special messages on specific iterations using a case statement.

count=1  # Initialize the counter
while [ $count -le 20 ]; do  # Loop from 1 to 20
    case $count in
        4)
            echo "$count bad luck from China"  # Special message for 4th iteration
            ;;
        9)
            echo "$count bad luck from Japan"  # Special message for 9th iteration
            ;;
        17)
            echo "$count bad luck from Italy"  # Special message for 17th iteration
            ;;
        *)
            echo "$count"  # Default case to display the number
            ;;
    esac
    count=$((count + 1))  # Increment the counter
done
